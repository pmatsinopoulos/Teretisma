source 'http://rubygems.org'

gem 'rails', '3.1.3'

gem 'mysql2', '~> 0.3.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', " ~> 3.1.0"
  gem 'coffee-rails', " ~> 3.1.0"
  gem 'uglifier'
  gem 'mustang'
end

# for javascript
gem 'jquery-rails'

# for error_messages_for
gem 'dynamic_form', '~> 1.1.4'

# For Foreign Keys constraints in migrations
gem 'foreigner'

# For start-up configuration settings
gem 'settingslogic'

group :development, :test do
  gem 'mocha', :require => false
  gem 'test-unit'
  gem 'ruby-debug19'
end

